{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["**/*.md"],
    "rules": {
        "no-unused-vars": [
            "error",
            { "vars": "local", "args": "none", "ignoreRestSiblings": false }
        ]
    }
}
